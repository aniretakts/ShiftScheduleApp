<Window x:Class="WpfApp2.DownloadWeeklyScheduleScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="DownloadWeeklyScheduleScreen" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="50"
            BorderThickness="5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Orange" Offset="0" />
                <GradientStop Color="DarkOrange" Offset="0.75" />
                <GradientStop Color="DarkRed" Offset="1" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#f2bd80" Offset="0" />
                <GradientStop Color="#a87132" Offset="0.75" />
                <GradientStop Color="#c96f08" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="86*"/>
                <ColumnDefinition Width="309*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Button Content="Menu"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontWeight="Medium" 
                        Margin="138,0,0,0"
                        Click="mainMenu_Click"/>

                <Button Content="Διαχείρηση Προσωπικού"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontWeight="Medium" 
                        Margin="230,0,0,0"
                        Click="PersonnelManagementButton_Click"/>

                <Button Content="Δημιουργία Προγράμματος"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontWeight="Medium" 
                        Margin="400,0,0,0"
                        Click="CreateSchedule_Click"/>

                <Button Content="About"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontWeight="Medium" 
                        Margin="600,0,0,0"
                        Click="AboutButton_Click"/>

                <Button x:Name="btnMinimize"
                    BorderThickness="0"
                    Content="-"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Arial"
                    Cursor="Hand"
                    Click="btnMinimize_Click" Margin="710,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="DarkGray"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkOrange"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18"
                                CornerRadius="9"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnClose"
                        BorderThickness="0"
                        Content="X"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Arial"
                        Cursor="Hand"
                        Click="btnClose_Click" Grid.Column="1">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="DarkGray"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="DarkRed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>


            <TextBlock Text="Αποθήκευση Αδειών Εβδομάδας"
                       TextWrapping="Wrap"    
                       Foreground="White"
                        FontSize="20"
                        FontWeight="Medium"
                        VerticalAlignment="Top"
                        Margin="184,112,118,0" Grid.Row="1" Height="39" Grid.Column="1"/>
            <Image HorizontalAlignment="Left" 
                   Height="141" 
                   Margin="118,112,0,0" 
                   Grid.Row="1" 
                   VerticalAlignment="Top" 
                   Width="194"
                   Source="/Images/Logo.png" Grid.ColumnSpan="2"/>

            <Button Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    FontWeight="Medium" 
                    Margin="223,150,0,0"
                    Click="DownloadVacationReport_Click" Grid.Row="1" Grid.Column="1">
                <Button.Content>
                    <Image Source="Images/download-icon.png" Width="59" Height="33"/>
                </Button.Content>
            </Button>


            <TextBlock Text="Αποθήκευση Εβδομαδιαίου Προγράμματος"
                       TextWrapping="Wrap"    
                       Foreground="White"
                        FontSize="20"
                        FontWeight="Medium"
                        VerticalAlignment="Top"
                        Margin="184,200,0,0" Grid.Row="1" Height="39" Grid.Column="1"/>

            <Button Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    FontWeight="Medium" 
                    Margin="223,240,0,0"
                    Click="DownloadWeeklySchedule_Click2" Grid.Row="1" Grid.Column="1">
                <Button.Content>
                    <Image Source="Images/download-icon.png" Width="59" Height="33"/>
                </Button.Content>
            </Button>

        </Grid>
    </Border>

</Window>

